<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pref_header">

    <PreferenceScreen
        android:icon="@drawable/ic_info_black_24dp"
        android:key="@string/pref_general_key"
        android:title="@string/pref_header_general">

        <EditTextPreference
            android:defaultValue="@string/pref_default_sub_address"
            android:inputType="text"
            android:key="sub_address"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_sub_address" />

        <EditTextPreference
            android:defaultValue="@string/pref_default_pub_address"
            android:inputType="text"
            android:key="pub_address"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_pub_address" />
        
    </PreferenceScreen>

</PreferenceScreen>
