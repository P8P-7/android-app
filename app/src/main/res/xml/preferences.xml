<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pref_header">

    <PreferenceScreen
        android:icon="@drawable/ic_network_wifi_black_24dp"
        android:key="@string/pref_networking_key"
        android:title="@string/pref_header_networking">

        <EditTextPreference
            android:defaultValue="@string/pref_default_address"
            android:digits="0123456789."
            android:icon="@drawable/ic_network_check_black_24dp"
            android:inputType="number|numberDecimal"
            android:key="address"
            android:maxLength="15"
            android:singleLine="true"
            android:title="@string/pref_title_address" />

        <EditTextPreference
            android:defaultValue="@string/pref_default_sub_port"
            android:icon="@drawable/ic_file_download_black_24dp"
            android:inputType="number"
            android:key="sub_port"
            android:maxLength="5"
            android:numeric="integer"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_sub_port" />

        <EditTextPreference
            android:defaultValue="@string/pref_default_pub_port"
            android:icon="@drawable/ic_file_upload_black_24dp"
            android:inputType="number"
            android:key="pub_port"
            android:maxLength="5"
            android:numeric="integer"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_pub_port" />

    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@drawable/ic_info_black_24dp"
        android:key="@string/pref_goliath_config_key"
        android:title="@string/pref_header_goliath_config" />

    <Preference
        android:icon="@drawable/ic_save_black_24dp"
        android:key="calibrate_wings"
        android:title="@string/pref_title_calibrate_wings" />

</PreferenceScreen>
