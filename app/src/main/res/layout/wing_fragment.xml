<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WingFragment">

    <me.angrybyte.circularslider.CircularSlider
        android:id="@+id/circular_tl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:angle="3.14"
        android:padding="15dp"
        app:angle="3.14"
        app:border_color="@color/joystickBorderColor"
        app:border_thickness="11dp"
        app:layout_constraintBottom_toTopOf="@+id/circular_bl"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.20"
        app:thumb_color="@color/joystickButtonColor"
        app:thumb_size="20dp" />

    <me.angrybyte.circularslider.CircularSlider
        android:id="@+id/circular_bl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:angle="3.14"
        android:padding="15dp"
        app:angle="3.14"
        app:border_color="@color/joystickBorderColor"
        app:border_thickness="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.20"
        app:thumb_color="@color/joystickButtonColor"
        app:thumb_size="20dp" />

    <me.angrybyte.circularslider.CircularSlider
        android:id="@+id/circular_tr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:angle="3.14"
        app:border_color="@color/joystickBorderColor"
        app:border_thickness="11dp"
        app:layout_constraintBottom_toTopOf="@+id/circular_br"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.20"
        app:thumb_color="@color/joystickButtonColor"
        app:thumb_size="20dp" />

    <me.angrybyte.circularslider.CircularSlider
        android:id="@+id/circular_br"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:angle="3.14"
        app:border_color="@color/joystickBorderColor"
        app:border_thickness="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.20"
        app:thumb_color="@color/joystickButtonColor"
        app:thumb_size="20dp" />

</androidx.constraintlayout.ConstraintLayout>